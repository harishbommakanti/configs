" syntax highlighting
colo desert
syntax on

" show line numbers
" set number

" replace tab with space
set expandtab
" 1 tab = 2 spaces
set tabstop=3 shiftwidth=3

" when deleting whitespace, delete 1 tab worth of space
set smarttab

" bracket completion
" inoremap " ""<left>
" inoremap ' ''<left>
" inoremap ( ()<left>
" inoremap [ []<left>
" inoremap { {}<left>
" inoremap {<CR> {<CR>}<ESC>O
" inoremap {;<CR> {<CR>};<ESC>O

" indentation stuff
set autoindent
set smartindent

" ignore case when searching
set ignorecase
set smartcase

" highlight search results
set hlsearch

" highlight all pattern matches while typing the patter
set incsearch


" show matching brackets
set showmatch

" highlight current line
" set cursorline
