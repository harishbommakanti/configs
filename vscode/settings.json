{
    "workbench.startupEditor": "none",

    // character line ruler
    "editor.rulers": [
        80
    ],

    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },

    // theme modifications
    "editor.tokenColorCustomizations": {
        "[Default Dark+]": {
            // white variables
            "variables": "#ffffffc0",

            "comments": {
                // italic gray comments  
                "fontStyle": "italic",
                "foreground": "#ffffff8e"
            },

            // green strings that used to be
            // the color of the default comments
            "strings": "#6a9955",

            "textMateRules": [
                {
                    // blue parameters
                    "scope": "variable.parameter",
                    "settings": {
                        "foreground": "#9cdcfe"
                    },
                },
            ]
        },

        "[One Dark Pro][One Dark Pro Darker][One Dark Pro Flat]": {
            "textMateRules": [
                {
                    // white variables but struct fields/class fields/members
                    // are still red
                    "scope": ["variable.other.readwrite", "variable.other.local"],
                    "settings": {
                        "foreground": "#aaaaaa"
                    }
                },
                {
                    "scope": ["variable.parameter"],
                    "settings": {
                        "foreground": "#39fe5382" //dark green params
                    }
                },
                {
                    // blue json keys
                    "scope": ["support.type.property-name.json",
                              "punctuation.support.type.property-name.begin.json",
                              "punctuation.support.type.property-name.end.json"],
                    "settings": {
                        "foreground": "#9cdcfe" 
                    }
                }
            ]
        }
    },

    // cursor stuff
    "editor.cursorBlinking": "phase",
    "editor.cursorStyle": "line",
    "editor.cursorSmoothCaretAnimation": false,
    "git.confirmSync": false,
    "terminal.integrated.inheritEnv": false,

    // make terminal font match with powerlevel10k
    "terminal.integrated.fontFamily": "MesloLGS NF",
    
    "workbench.editor.enablePreview": false,

    "workbench.colorTheme": "One Dark Pro Darker",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.preferredDarkColorTheme": "One Dark Pro Darker",
    "oneDarkPro.editorTheme": "One Dark Pro Darker"
}

